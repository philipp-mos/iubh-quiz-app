{
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--extend-exclude=logs/,env/,migrations/",
        "--max-line-length=140"
    ],
    "python.linting.ignorePatterns": [
        ".github/**",
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "build/**",
        "web-bundle/**",
        "web-app/logs/**",
        "web-app/migrations/**"
    ]
}