{% extends 'auth_layout.jinja2' %}
{% set page_title = 'Login' %}
{% set bundle_name = 'auth.bundle' %}

{% block content %}
    <main class="form-signin">
        <form>
            <img class="mb-4" src="{{ url_for('static', filename='assets/images/logo-iuquiz-dark.svg') }}{{ '?v=' + bundle_version }}" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Login</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email Adresse</label>
            </div>
            <div class="mb-2"></div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Passwort</label>
            </div>

            <div class="mb-5"></div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Anmelden</button>
        </form>
    </main>
{% endblock %}
