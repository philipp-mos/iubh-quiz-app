{% extends 'auth_layout.jinja2' %}
{% set page_title = 'Login' %}
{% set bundle_name = 'auth.bundle' %}

{% block content %}
    <main class="form-signin">
        <form method="POST" action="/auth/login">
            {{ form.csrf_token }}

            <img class="mb-4" src="{{ url_for('static', filename='assets/images/logo-iuquiz-dark.svg') }}{{ '?v=' + bundle_version }}" alt="" height="57">
            <h1 class="h3 mb-3 fw-normal">Login</h1>

            <div class="form-floating">                
                {{ form.email(class_="form-control") }}
                {{ form.email.label }}
            </div>

            <div class="mb-2"></div>

            <div class="form-floating">                
                {{ form.password(class_="form-control") }}
                {{ form.password.label }}
            </div>

            <div class="mb-5"></div>

            {{ form.submit(class_="w-100 btn btn-lg btn-primary") }}
        </form>

        <p class="mt-3">
            <a href="#">
                Registrieren
            </a>
        </p>

    </main>
{% endblock %}
