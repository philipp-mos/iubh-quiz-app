{% extends 'auth_layout.jinja2' %}
{% set page_title = 'Passwort vergessen' %}
{% set bundle_name = 'auth.bundle' %}

{% block content %}
    <main class="auth-form__container">
        <div class="row">
            <div class="col-12">
                <a href="{{ url_for('home_controller.index') }}">
                    <img class="mb-4 d-none d-sm-block" src="{{ url_for('static', filename='assets/images/logo-iuquiz-white.svg') }}{{ '?v=' + bundle_version }}" alt="" height="57">
                    <img class="mb-4 d-block d-sm-none" src="{{ url_for('static', filename='assets/images/logo-iuquiz-dark.svg') }}{{ '?v=' + bundle_version }}" alt="" height="57">
                </a>

                <h1 class="h3 mb-4 fw-normal auth-form__title">Passwort vergessen</h1>

                <div class="form-floating">
                    <input class="form-control" id="email" name="email" placeholder="#" required="" type="email" value="">
                    <label for="email">Email</label>
                </div>

                <button class="w-100 btn btn-lg btn-primary mt-5" id="submit" name="submit" type="submit">Passwort zur√ºcksetzen</button>

            </div>
        </div>
        <div class="d-block d-sm-none mt-5"></div>
        <div class="row mt-4">
            <div class="col--12">
                <a href="{{ url_for('auth_controller.login') }}" class="btn btn-secondary w-100">
                    Login
                </a>
            </div>
        </div>

    </main>
{% endblock %}
