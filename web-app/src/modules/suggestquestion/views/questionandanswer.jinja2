{% extends 'base_layout.jinja2' %}
{% set page_title = 'Frage vorschlagen' %}
{% set bundle_name = 'suggestquestion.bundle' %}

{% block content %}

<div class="row">
  <div class="col-12">
    <nav class="nav nav-pills nav-fill">
      <a class="nav-link disabled" href="#">Modulauswahl</a>
      <a class="nav-link active" href="#">Frage / Antworten</a>
      <a class="nav-link disabled" href="#">Danke</a>
    </nav>
  </div>
</div>



<div class="row mt-5">
  <div class="col-12">
    <h1 class="h3">Die Quiz-Frage</h1>
  </div>
</div>


<div class="row mt-3">
  <div class="col-12">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="input-quiz-question" placeholder="Wie lautet deine Quiz-Frage?">
      <label for="input-quiz-question">Wie lautet deine Quiz-Frage?</label>
    </div>
  </div>
</div>



<div class="row mt-5">
  <div class="col-12">
    <h1 class="h3">Die Antwortmöglichkeiten</h1>
    Bitte nenne uns drei Antwortmöglichkeiten und kennzeichne die korrekte!
  </div>
</div>


<div class="row mt-3">
  <div class="col-12">

    <div class="input-group mb-1">
      <div class="input-group-text">
        <div class="form-check form-switch">
          <input class="form-check-input" type="radio" name="switch-correct-answer" id="switch-correct-answer-first">
        </div>
      </div>
      <div class="form-floating input-answer">
        <input type="text" class="form-control" id="input-answer-first" placeholder="Bitte nenne uns deine erste Antwortmöglichkeit">
        <label for="input-answer-first">Bitte nenne uns deine erste Antwortmöglichkeit</label>
      </div>
    </div>

    <div class="input-group mb-1">
      <div class="input-group-text">
        <div class="form-check form-switch">
          <input class="form-check-input" type="radio" name="switch-correct-answer" id="switch-correct-answer-first">
        </div>
      </div>
      <div class="form-floating input-answer">
        <input type="text" class="form-control" id="input-answer-second" placeholder="Bitte nenne uns deine zweite Antwortmöglichkeit">
        <label for="input-answer-second">Bitte nenne uns deine zweite Antwortmöglichkeit</label>
      </div>
    </div>

    <div class="input-group">
      <div class="input-group-text">
        <div class="form-check form-switch">
          <input class="form-check-input" type="radio" name="switch-correct-answer" id="switch-correct-answer-first">
        </div>
      </div>
      <div class="form-floating input-answer">
        <input type="text" class="form-control" id="input-answer-third" placeholder="Bitte nenne uns deine dritte Antwortmöglichkeit">
        <label for="input-answer-third">Bitte nenne uns deine dritte Antwortmöglichkeit</label>
      </div>
    </div>


  </div>
</div>



<div class="row mt-5">
  <div class="col-12">
    <div class="position-relative">
      <div class="position-absolute bottom-0 end-0">
        <a href="{{ url_for('suggestquestion_controller.thanks') }}" class="btn btn-success" id="button-next-step">Jetzt absenden <i class="fas fa-chevron-right"></i></a>
      </div>
    </div>
  </div>
</div>


{% endblock %}
