{% extends 'base_layout.jinja2' %}
{% set page_title = 'Quiz - Ergebnisse' %}
{% set bundle_name = 'quiz.bundle' %}

{% block content %}
  <div class="row mb-5">
    <div class="col-12">
      <nav class="nav nav-pills nav-fill">
        {% for count in range(config['AMOUNT_OF_QUESTIONS_PER_QUIZ']) %}
          {% set count = count + 1 %}
          <a class="nav-link disabled" href="#">Frage {{ count }}</a>
        {% endfor %}
        <a class="nav-link active" href="#">Ergebnis</a>
      </nav>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h1 class="h2">Ergebnisse</h1>
    </div>
  </div>

  <span>{{ viewmodel.amount_questions }}</span>
  <span>{{ viewmodel.amount_correct_questions }}</span>

  <div class="row mt-5">
    <div class="col-12">
      <div class="position-relative">
        <div class="position-absolute bottom-0 end-0">
          <a href="{{ url_for('home_controller.index') }}" class="btn btn-primary">Zum Dashboard</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
