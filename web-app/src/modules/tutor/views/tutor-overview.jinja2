{% extends 'base_layout.jinja2' %}
{% set page_title = 'Tutorbereich' %}
{% set bundle_name = '' %}

{% block content %}

    <h1>Tutorbereich: Quizvorschläge</h1>

    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-secondary" role="alert">
                <i class="fas fa-info-circle"></i>&nbsp;
                Eine Bearbeitung, sowie die Freigabe von eingereichten Quizfragen ist bald möglich.
            </div>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Datum</th>
                        <th>Quizfrage</th>
                        <th>Modul</th>
                    </tr>
                </thead>
                <tbody>
                    {% for viewmodel in viewmodel_list %}
                        <tr>
                            <td>{{ viewmodel.date }}</td>
                            <td>{{ viewmodel.question_text }}</td>
                            <td>{{ viewmodel.subject_name }}</td>
                        </tr>
                    {% endfor %}
                    {% if not viewmodel_list %}
                        <tr>
                            <td colspan="3">Es konnten keine Einträge gefunden werden</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
