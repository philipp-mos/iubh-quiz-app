{% extends 'base_layout.jinja2' %}
{% set page_title = 'Eingereichter Quizvorschlag' %}
{% set bundle_name = '' %}

{% block content %}

    <h1>Tutorbereich: Eingereichter Quizvorschlag</h1>

    <div class="row mt-5">
        <div class="col-sm-2 col-xs-12">
            <strong>Quizfrage:</strong>
        </div>
        <div class="col-sm-6 col-xs-12">
            {{ viewmodel.question_text }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-2 col-xs-12">
            <strong>Datum eingereicht:</strong>
        </div>
        <div class="col-sm-6 col-xs-12">
            {{ viewmodel.date }}
        </div>
    </div>
    <div class="row mt-3 mb-5">
        <div class="col-sm-2 col-xs-12">
            <strong>Modul:</strong>
        </div>
        <div class="col-sm-6 col-xs-12">
            {{ viewmodel.subject_name }}
        </div>
    </div>

    <h2 class="h4">Antwortmöglichkeiten</h2>

    {% for answer in viewmodel.answer_viewmodels %}
        <div class="row mt-3">
            <div class="col-sm-2 col-xs-12">
                <strong>Antwortmöglichkeit:</strong>
            </div>
            <div class="col-sm-6 col-xs-12">
                {% if answer.is_correct %}
                    <i class="far fa-check-circle text-success"></i>
                {% else %}
                    <i class="far fa-times-circle text-danger"></i>
                {% endif %}
                
                &nbsp;
                {{ answer.answer_text }}
            </div>
        </div>
    {% endfor %}


    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-secondary" role="alert">
                <h3 class="h5">Genehmigen / Ablehnen</h3>
                <p>Momentan können gestellte Quizvorschläge noch nicht genehmigt werden.</p>
                <button type="button" class="btn btn-success" disabled><i class="fas fa-check"></i>&nbsp;Genehmigen</button>
                <button type="button" class="btn btn-danger" disabled><i class="fas fa-times"></i>&nbsp;Ablehnen</button>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a href="{{ url_for('tutor_controller.overview') }}" class="btn btn-primary">Zurück</a>
        </div>
    </div>

{% endblock %}
