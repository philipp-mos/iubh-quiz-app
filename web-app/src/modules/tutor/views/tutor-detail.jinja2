{% extends 'base_layout.jinja2' %}
{% set page_title = 'Eingereichte QuizFrage' %}
{% set bundle_name = '' %}

{% block content %}

    <h1>Tutorbereich: Eingereichter Quizvorschlag</h1>

    <div class="row mt-5">
        <div class="col-sm-2 col-xs-12">
            <strong>Quizfrage:</strong>
        </div>
        <div class="col-sm-6 col-xs-12">
            {{ viewmodel.question_text }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-2 col-xs-12">
            <strong>Datum eingereicht:</strong>
        </div>
        <div class="col-sm-6 col-xs-12">
            {{ viewmodel.date }}
        </div>
    </div>
    <div class="row mt-3 mb-5">
        <div class="col-sm-2 col-xs-12">
            <strong>Modul:</strong>
        </div>
        <div class="col-sm-6 col-xs-12">
            {{ viewmodel.subject_name }}
        </div>
    </div>

    <h2 class="h4">Antwortmöglichkeiten</h2>

    {% for answer in viewmodel.answer_viewmodels %}
        <div class="row mt-3">
            <div class="col-sm-2 col-xs-12">
                <strong>Antwortmöglichkeit:</strong>
            </div>
            <div class="col-sm-6 col-xs-12">
                {% if answer.is_correct %}
                    <i class="far fa-check-circle text-success"></i>
                {% else %}
                    <i class="far fa-times-circle text-danger"></i>
                {% endif %}
                
                &nbsp;
                {{ answer.answer_text }}
            </div>
        </div>
    {% endfor %}

{% endblock %}
