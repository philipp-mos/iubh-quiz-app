{% extends 'base_layout.jinja2' %}
{% set page_title = 'Modulauswahl' %}
{% set bundle_name = '' %}

{% block content %}
  <p class="h1">Modulauswahl</p>

  {% if subjects %}
    {% for subject in subjects %}
      {% set quiz_start_url = url_for('quiz_controller.start', subject_id=subject.id) %}
      <div class="card mb-3" >
        <div class="row g-0">
          <div class="col-md-4 text-left align-self-md-left">
            <a href="{{ quiz_start_url }}">
              <img class="img-fluid" src="{{ subject.image_path }}" alt="Subject Image" loading="lazy" width="400">
            </a>
          </div>
          <div class="col-md-6 ">
            <div class="card-body">
              <p class="card-text">{{ subject.short }}</p>
              <h4 class="card-title">{{ subject.name }}</h4>
            </div>
          </div>
          <div class="col-md-2 text-left align-self-md-left p-3">
            <a href="{{ quiz_start_url }}" class="btn btn-primary"><i class="fas fa-play"></i> Spiel starten</a>
          </div>
        </div>
      </div>
    {% endfor %}
  {% else %}
    Es wurden keine Module gefunden
  {% endif %}

{% endblock %}
