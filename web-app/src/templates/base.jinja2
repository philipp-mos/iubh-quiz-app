<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ page_title }} | IUBH-Quiz-App</title>

        <meta name="robots" content="noindex, nofollow">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="apple-touch-icon" href="{{ url_for('static', filename='assets/images/apple-touch-icon.png') }}">
        <link rel="shortcut icon" href="{{ url_for('static', filename='assets/images/favicon.ico') }}"/>


        {% include 'layout/styleincludes.jinja2' %}

    </head>
    <body class="d-flex flex-column h-100">
        <header>
            {% include 'layout/navigation.jinja2' %}
        </header>

        <main role="main" class="container">
            <div class="row">
                <div class="col-12 pt-5">
                    {% block content %}{% endblock %}
                </div>
            </div>

            {% if config['FLASK_ENV'] == 'development' %}
                <div class="row">
                    <div class="col-12">
                        {% include 'debug/debuginfo.jinja2' %}
                    </div>
                </div>
            {% endif %}
        </main>

        {% include 'layout/scriptincludes.jinja2' %}
    </body>
</html>
